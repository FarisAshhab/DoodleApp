<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Doodle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        input[type='checkbox'] {width: 18px; height: 18px;}
    </style>
</head>
<body>
    <div class="container">
        <div class="mt-3">
            <a href="./">Homepage</a>
        </div>
        <div class="col-md-12 border px-4 py-2 mt-2">
            <form action="./create-doodle" method="POST" class="mt-2">
                <div class="form-group">
                    <p><b>Name: </b><input type="text" class="ml-3" name="name" placeholder="Enter your name here" required></p>
                    <% doodle_times.forEach(function(doodle_time){ %>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="time" type="checkbox" id="<%= doodle_time.id %>"" value="<%= doodle_time.id %>">
                        <label class="form-check-label" for="<%= doodle_time.id %>""><%= doodle_time.time %></label>
                    </div>
                    <% }) %>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create Doodle" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>
</html>